{
  "$schema": "https://arkit.pro/schema.json",
  "excludePatterns": [
    "**/test/**",
    "**/tests/**",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "components": [
    {
      "type": "entry",
      "patterns": ["client/src/App.js"]
    },
    {
      "type": "pages",
      "patterns": ["client/src/views/*.js"]
    },
    {
      "type": "containers",
      "patterns": ["client/src/containers/**/*.js"]
    },
    {
      "type": "components",
      "patterns": ["client/src/components/**/**/*.js"]
    },
    {
      "type": "services",
      "patterns": ["client/src/services/*.js", "src/components/charts/*.js"]
    },
    {
      "type": "models",
      "patterns": ["server/models/*.js"]
    },
    {
      "type": "functions",
      "patterns": ["server/controllers/*.js"]
    },
    {
      "type": "routes",
      "patterns": ["server/routes/*.js"]
    },
    {
      "type": "server",
      "patterns": ["server/index.js"]
    }
  ],
  "output": [
    {
      "path": "docs/diagram.svg",
      "groups": [
        {
          "first": true,
          "type": "Client",
          "components": ["entry"]
        },
        {
          "type": "Roles",
          "components": ["pages"]
        },
        {
          "type": "Views",
          "components": ["containers"]
        },
        {
          "type": "Services",
          "components": ["services"]
        },
        {
          "first": true,
          "type": "API",
          "components": ["server"]
        },
        {
          "type": "Routes",
          "components": ["routes"]
        },
        {
          "type": "Models",
          "components": ["models"]
        },
        {
          "type": "Functions",
          "components": ["functions"]
        }
      ]
    }
  ]
}
