{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/**/**.ts", "./public/**.ts"],
  "exclude": ["node_modules/**/**", "config/**/**", "scripts/**"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  }
}
