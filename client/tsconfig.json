{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "es2015.promise"],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/**/**.\"(ts|tsx)\"", "./public/**.ts"],
  "exclude": ["node_modules/**/**", "config/**/**", "scripts/**"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
  }
}
