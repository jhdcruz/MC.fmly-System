{
  "name": "client",
  "description": "MC.fmly Inventory System",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "private": true,
  "main": "./build/electron.js",
  "proxy": "http://localhost:5000",
  "scripts": {
    "start": "node scripts/start.js",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron ./public/electron.js\" --kill-others-on-fail",
    "build": "node scripts/build.js",
    "test": "echo \"Tests are for the weaks, living on the edge brotha...\"",
    "lint": "prettier \"src/**/**.{html,scss,js,jsx}\" --write && eslint \"src/**/**/*.{js,jsx}\" && stylelint \"./src/**/**/*.{js,css,scss,sass}\"",
    "package-all": "yarn rebuild && yarn build && electron-builder build -mwl",
    "package-ci": "yarn rebuild && yarn build && electron-builder --publish never",
    "package-mac": "yarn rebuild &&  yarn build && electron-builder build --mac",
    "package-linux": "yarn rebuild && yarn build && electron-builder build --linux",
    "package-win": "yarn rebuild &&  yarn build && electron-builder build --win",
    "rebuild": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.32",
    "@fortawesome/free-solid-svg-icons": "5.15.1",
    "@fortawesome/react-fontawesome": "0.1.11",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "@treverix/remote": "0.1.1",
    "axios": "0.20.0",
    "bootstrap": "4.5.3",
    "cross-env": "7.0.2",
    "custom-electron-titlebar": "3.2.5",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "electron-is-dev": "1.2.0",
    "jquery": "3.5.1",
    "node-sass": "4.14.1",
    "popper.js": "1.16.1",
    "react": "16.14.0",
    "react-bootstrap": "1.3.0",
    "react-dom": "16.14.0",
    "react-router-dom": "5.2.0",
    "styled-components": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@svgr/webpack": "4.3.3",
    "autoprefixer": "10.0.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.0",
    "babel-loader": "8.1.0",
    "babel-plugin-named-asset-import": "0.3.6",
    "babel-preset-react-app": "9.1.2",
    "camelcase": "5.3.1",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "concurrently": "5.3.0",
    "css-loader": "3.6.0",
    "electron": "10.1.3",
    "electron-builder": "22.9.1",
    "electron-download": "4.1.1",
    "electron-is-dev": "1.2.0",
    "eslint": "6.8.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-loader": "3.0.4",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "1.7.0",
    "file-loader": "6.1.1",
    "fs-extra": "9.0.1",
    "html-webpack-plugin": "4.0.0-beta.11",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.0",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-resolve": "26.6.0",
    "jest-watch-typeahead": "0.4.2",
    "mini-css-extract-plugin": "1.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "pnp-webpack-plugin": "1.6.4",
    "postcss": "8.1.2",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "4.0.4",
    "postcss-normalize": "9.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "4.0.1",
    "prettier": "2.1.2",
    "react-app-polyfill": "1.0.6",
    "react-dev-utils": "10.2.1",
    "resolve": "1.15.0",
    "resolve-url-loader": "3.1.1",
    "sass-loader": "8.0.2",
    "style-loader": "0.23.1",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-prettier": "1.1.2",
    "terser-webpack-plugin": "2.3.8",
    "ts-pnp": "1.1.6",
    "url-loader": "2.3.0",
    "wait-on": "5.2.0",
    "webpack": "4.42.0",
    "webpack-dev-server": "3.11.0",
    "webpack-manifest-plugin": "2.2.0",
    "workbox-webpack-plugin": "5.1.4"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/no-extraneous-dependencies": [
        "off",
        {
          "devDependencies": false,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ]
    },
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "author": {
    "name": "Jhdcruz",
    "email": "jhdcruz00@gmail.com",
    "url": "https://github.com/jhdcruz"
  },
  "build": {
    "appId": "com.jhdcruz.mcfmly",
    "productName": "MC.fmly Inventory System",
    "files": [
      "./build/electron.js",
      "./build/**/*",
      "./node_modules/**/*"
    ],
    "dmg": {
      "icon": "./resources/icon.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "./resources/icon512.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "./resources/icon.png",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Productivity"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "extraResources": [
      "./resources/**/*"
    ],
    "extraFiles": [
      "../LICENSE"
    ],
    "publish": {
      "provider": "github",
      "owner": "Jhdcruz",
      "repo": "https://github.com/jhdcruz/MC.fmly-System",
      "publish": "onTag"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/client/tests"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/client/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/client/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/client/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/client/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/client/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "resolutions": {
    "styled-components": "5.2.0"
  }
}
