{
  "name": "api",
  "version": "0.4.0",
  "private": true,
  "description": "MC.fmly Inventory System | Back-End",
  "license": "GPL-3.0-or-later",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "serve": "nodemon --watch --trace-deprecation server.js",
    "lint": "prettier \"./**/**.{js,ts,jsx}\" --write && eslint \"**/**/*.{js,ts,jsx}\" --fix"
  },
  "workspaces": {
    "nohoist": [
      "*"
    ]
  },
  "dependencies": {
    "@sentry/node": "5.27.4",
    "@sentry/tracing": "5.27.4",
    "argon2": "0.27.0",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "helmet": "4.2.0",
    "mongoose": "5.10.15"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "nodemon": "2.0.6"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true
    },
    "settings": {
      "import/extensions": [
        ".js",
        ".ts"
      ]
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "brace-style": "off",
      "no-console": "off",
      "no-var": "off",
      "one-var": "off",
      "import/no-anonymous-default-export": "off",
      "import/no-extraneous-dependencies": "off"
    }
  }
}
