{
  "name": "api",
  "version": "0.3.0",
  "private": true,
  "description": "MC.fmly Inventory System | Back-End",
  "license": "GPL-3.0-or-later",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon server.ts",
    "serve": "nodemon --watch --trace-deprecation server.ts",
    "lint": "prettier \"./**/**.{js,ts,jsx}\" --write && eslint \"**/**/*.{js,ts,jsx}\" --fix"
  },
  "workspaces": {
    "nohoist": [
      "*"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": true,
      "include": [
        "./**/**.ts"
      ],
      "exclude": [
        "node_modules/**/**"
      ]
    },
    "include": [
      "**/**/**.ts"
    ],
    "exclude": [
      "node_modules/**/**"
    ],
    "rules": {}
  },
  "dependencies": {
    "@types/express": "4.17.9",
    "@types/mongoose": "5.10.0",
    "@types/node": "14.14.8",
    "argon2": "0.27.0",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "helmet": "4.2.0",
    "mongoose": "5.10.15",
    "rollbar": "2.19.4"
  },
  "devDependencies": {
    "@vercel/node": "1.8.5",
    "babel-eslint": "10.1.0",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "nodemon": "2.0.6",
    "typescript": "4.0.5"
  }
}
