{
  "name": "mc-fmly-inventory-system",
  "description": "MC.fmly Inventory System",
  "license": "GPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "api",
    "client"
  ],
  "scripts": {
    "prestart": "yarn workspace client build",
    "start": "concurrently \"yarn workspace api serve\" \"yarn workspace client start\"  --kill-others-on-fail",
    "web": "concurrently \"yarn workspace api serve\" \"yarn workspace client web\"  --kill-others-on-fail",
    "api": "yarn workspace api serve",
    "client-web": "yarn workspace client web",
    "client-electron": "yarn workspace client start",
    "build": "yarn workspace client build",
    "test": "echo \"Planned...\"",
    "lint": "concurrently \"yarn workspace client lint\" \"yarn workspace api lint\"",
    "docker-build": "docker-compose --env-file ./api/.env up --build",
    "docker-up": "docker-compose --env-file ./api/.env up"
  },
  "devDependencies": {
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "eslint": "7.13.0",
    "prettier": "2.1.2"
  }
}
